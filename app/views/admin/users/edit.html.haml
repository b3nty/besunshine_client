  = simple_form_for @user, url: admin_user_path(params[:id]) , method: :post do |f|
    .text-left
      %h1 Modifier un Client
      %br
      = f.button :submit, :value => "Valider", class: "menu-button"
      &nbsp;&nbsp;
      ou
      &nbsp;
      = link_to "Retour", admin_users_path, class: "back"
      %br/
      %br/
      = f.input :email, label: "Email :"
      = f.input :password, label: "Mots de passe :"
