      %span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav.mr-auto
        %li.nav-item{:class => current_page?(dashboard_index_path) && 'active'}
          = link_to 'Actu', dashboard_index_path, title: "Actu", class: "nav-link"
